@model LoginModel;


                        <div class="login">
                        <form asp-action="ProcessLogin" asp-controller="ModelUser" method="post">
                            <div class="group"> <label asp-for="logEmail" class="label"> Email </label> <input asp-for="logEmail" type="text" class="input" placeholder="Enter your Email"> </div>
                            <div class="group"> <label asp-for="logPassword" class="label">LoginPassword</label> <input asp-for="logPassword" type="password" class="input" data-type="password" placeholder="Enter your password"> </div>
                            <div class="group"> <input id="check" type="checkbox" class="check" checked> <label for="check"><span class="icon"></span> Keep me Signed in</label> </div>
                            <div class="group"> <input type="submit" class="button" value="Sign In"> </div>
                        </form>
                            <div class="hr"></div>
                            <div class="foot"> <a href="#">Forgot Password?</a> </div>
                        </div>
